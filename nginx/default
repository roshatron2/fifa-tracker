# FIFA Rivalry Tracker Backend - Nginx Configuration
# This configuration proxies all requests to the FastAPI backend on port 8000
# Note: ngrok forwards HTTP to local server even when client uses HTTPS

# HTTP server (ngrok forwards HTTP here)
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name _;

    # Client max body size for file uploads
    client_max_body_size 10M;

    # Real IP configuration (for ngrok)
    set_real_ip_from 0.0.0.0/0;
    real_ip_header X-Forwarded-For;
    real_ip_recursive on;

    # API routes - proxy to FastAPI backend
    location / {
        proxy_pass http://127.0.0.1:8000;
        
        # Standard proxy headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        
        # Forward Origin header explicitly (nginx doesn't forward it by default)
        # Use map to conditionally set Origin only if it exists
        proxy_set_header Origin $http_origin;
        
        # ngrok specific headers
        proxy_set_header ngrok-skip-browser-warning true;

        # IMPORTANT: Do NOT hide CORS headers - let FastAPI's CORS middleware set them
        # FastAPI will handle all CORS headers, so we must let them pass through

        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;

        # Buffer settings
        proxy_buffering on;
        proxy_buffer_size 8k;
        proxy_buffers 8 8k;
        
        # Don't intercept errors - let backend handle them
        proxy_intercept_errors off;
    }

    # Health check endpoint
    location /health {
        proxy_pass http://127.0.0.1:8000/health;
        proxy_set_header Host $host;
        access_log off;
    }
}
