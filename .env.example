# Environment Configuration
ENVIRONMENT=development

# MongoDB Configuration
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database_name
# For local MongoDB: mongodb://localhost:27017/fifa_rivalry
# For local MongoDB(docker compose): mongodb://mongodb:27017/fifa_rivalry
MONGO_URI=mongodb://mongodb:27017/fifa_rivalry

# JWT Authentication
# Generate a secure key using: python scripts/generate_secret_key.py
SECRET_KEY=your_secret_key_here_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# Logging
LOG_LEVEL=INFO

# Google OAuth Configuration (Optional)
# Get credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback
FRONTEND_URL=http://localhost:3000
